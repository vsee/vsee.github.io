---
import SocialLinks from './SocialLinks.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<section class="min-h-screen flex flex-col">
  <!-- Header with theme toggle -->
  <header class="py-4 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto flex justify-end">
      <ThemeToggle />
    </div>
  </header>

  <!-- Hero content -->
  <div class="flex-1 flex items-center justify-center px-4 sm:px-6 lg:px-8 pb-16">
    <div class="text-center md:text-left md:flex md:items-center md:gap-12 max-w-4xl w-full">
      <!-- Profile image -->
      <div class="flex-shrink-0 mb-8 md:mb-0">
        <img
          src="/images/profile.png"
          alt="Volker Seeker"
          class="w-40 h-40 md:w-52 md:h-52 rounded-full mx-auto md:mx-0
                 shadow-xl ring-4 ring-white dark:ring-slate-800
                 object-cover"
        />
      </div>

      <!-- Text content -->
      <div class="flex-1">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-slate-900 dark:text-white tracking-tight">
          Volker Seeker
        </h1>

        <p class="mt-4 text-xl md:text-2xl text-slate-600 dark:text-slate-400">
          Founding Engineer at <a href="https://axiommath.ai/" target="_blank" rel="noopener noreferrer" class="text-primary-600 dark:text-primary-400">Axiom</a>
        </p>

        <p class="mt-2 text-lg text-slate-500 dark:text-slate-500 flex items-center justify-center md:justify-start gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          San Francisco Bay Area
        </p>

        <!-- Social links -->
        <div class="mt-8">
          <SocialLinks />
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="pb-8 flex justify-center">
    <a href="#about" class="animate-bounce text-slate-400 hover:text-slate-600 dark:hover:text-slate-300 transition-colors">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>
