---
interface Props {
  dateRange: string;
  role: string;
  organization: string;
  location: string;
  current?: boolean;
}

const { dateRange, role, organization, location, current = false } = Astro.props;
---

<div class={`timeline-item ${current ? 'current' : ''}`}>
  <div class="text-sm font-medium text-primary-600 dark:text-primary-400 mb-1">
    {dateRange}
  </div>
  <div class="font-semibold text-slate-900 dark:text-slate-100">
    {role}
  </div>
  <div class="text-slate-600 dark:text-slate-400">
    {organization}
  </div>
  <div class="text-sm text-slate-500 dark:text-slate-500 mt-1">
    {location}
  </div>
</div>
